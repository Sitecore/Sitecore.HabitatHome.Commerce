@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Commerce.XA.Feature.Cart.Models
@using Sitecore.Mvc
@model MinicartRenderingModel

<div @Html.Sxa().Component("cxa-minicart-component", Model.Attributes) data-cxa-component-class="Minicart" data-cxa-component-initialized="false" data-cxa-component-type="component">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div>@Model.ErrorMessage</div>
    }
    else
    {
        <div class="basket" data-bind="with: cart">
            <div class="top-text">
                <a href="@Model.TopLink" title="@Html.Sitecore().CurrentItem["View Cart Link Tooltip"]" class="toggle-cart" data-bind="event:{ mouseover: function(){$parent.slideDown($element);}}">
                    @Html.Sitecore().Field("Top Text Label", Html.Sitecore().CurrentItem)
                </a>
                <p class="cart-items-count" data-bind="text: cartLines().length"></p>
            </div>

            <div class="minicart">
                <div class="minicart-content" data-bind="foreach: cartLines, visible: cartLines().length">
                    <div class="minicart-item" data-bind="attr: {'data-ajax-lineitemid': externalCartLineId}">
                        <img alt="Image" data-bind="attr:{src: image, alt: displayName}">
                        <div class="minicart-info">
                            <h5><a data-bind="text: displayName, attr:{ href:productUrl}"></a></h5>
                            <p>Quantity <strong data-bind="text: quantity"></strong></p>
                            <span class="price" data-bind="text: linePrice"></span>                           
                        </div>
                        <span class="minicart-delete">
                            <a href="#"><span data-bind="click: $parents[1].removeItem"></span></a>
                        </span>
                    </div>
                </div>
                <div class="minicart-footer">
                    <span class="minicart-total-label">@Html.Sitecore().Field("Total Label", Html.Sitecore().CurrentItem) </span>
                    <span class="minicart-total-amount" data-bind="text: total "></span>
                </div>
                <div class="minicart-buttons">
                    @if (!Model.HideCheckoutButton)
                    {

                        <a class="checkout-button" title="@Html.Sitecore().CurrentItem["Checkout Link Tooltip"]" href="@Model.CheckoutLink">
                            @Html.Sitecore().Field("Checkout Link Text", Html.Sitecore().CurrentItem)
                        </a>
                        <a class="view-cart-button" href="@Model.ViewCartLink" title="@Html.Sitecore().CurrentItem["View Cart Link Tooltip"]">
                            @Html.Sitecore().Field("View Cart Link Text", Html.Sitecore().CurrentItem)
                        </a>

                    }
                </div>
            </div>
        </div>
    }
</div>