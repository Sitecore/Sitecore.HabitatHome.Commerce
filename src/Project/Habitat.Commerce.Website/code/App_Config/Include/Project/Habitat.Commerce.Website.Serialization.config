<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/"                                          
               xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
    <sitecore unicorn:require="On">
        <unicorn>
            <configurations>
                <configuration name="Project.Habitat.Commerce.Website" description="Habitat Home Commerce content" dependencies="Foundation.*,Feature.*,Project.Common.Website,Project.Habitat.Website,Project.Habitat.Home.Website" extends="Helix.Base">
                    <targetDataStore physicalRootPath="$(commerce.sourceFolder)\Project\Habitat.Commerce.Website\serialization" useDataCache="false" singleInstance="true" />
                    <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
                       
                        <!-- Commerce components -->
                        <include name="Layout.Feature.Commerce" database="master" path="/sitecore/layout/Renderings/Feature/Commerce Experience Accelerator" />
                        <include name="Layout.Foundation.Commerce" database="master" path="/sitecore/layout/Renderings/Foundation/Commerce Experience Accelerator" />

                    </predicate>
                 
                </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>